{
  "name": "document-pilot",
  "version": "0.1.0",
  "private": true,
  "description": "High-performance Electron app for AI-powered document analysis and charting.",
  "main": "dist-electron/main/main.js",
  "engines": {
    "node": ">=24.0.0"
  },
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:renderer dev:electron",
    "dev:renderer": "vite",
    "dev:electron": "wait-on tcp:5173 && npm run build:electron && DOCUMENT_PILOT_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "npm-run-all build:renderer build:electron",
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "typecheck": "tsc --noEmit -p tsconfig.electron.json && tsc --noEmit -p tsconfig.renderer.json",
    "start": "npm run build && electron ."
  },
  "dependencies": {
    "@github/copilot-sdk": "^0.1.23",
    "chart.js": "^4.5.1",
    "electron": "^37.0.0",
    "exceljs": "^4.4.0",
    "papaparse": "^5.5.3",
    "pdf-parse": "^2.4.5"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^24.3.0",
    "@types/papaparse": "^5.5.2",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "wait-on": "^8.0.5"
  }
}
