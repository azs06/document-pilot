{
  "name": "document-pilot",
  "version": "0.1.0",
  "private": true,
  "description": "Electron app for AI-powered chat with documents (CSV, Excel, PDF).",
  "main": "dist-electron/main/main.js",
  "engines": {
    "node": ">=24.0.0"
  },
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:renderer dev:electron",
    "dev:renderer": "vite",
    "dev:electron": "wait-on tcp:5173 && npm run build:electron && DOCUMENT_PILOT_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "npm-run-all build:renderer build:electron",
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "typecheck": "tsc --noEmit -p tsconfig.electron.json && tsc --noEmit -p tsconfig.renderer.json",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder --publish never",
    "dist:mac": "npm run build && electron-builder --mac --publish never",
    "dist:win": "npm run build && electron-builder --win --publish never"
  },
  "build": {
    "appId": "com.document-pilot.app",
    "productName": "Document Pilot",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "dist-renderer/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false
    }
  },
  "dependencies": {
    "@github/copilot-sdk": "^0.1.23",
    "dompurify": "^3.3.1",
    "exceljs": "^4.4.0",
    "highlight.js": "^11.11.1",
    "marked": "^17.0.2",
    "papaparse": "^5.5.3",
    "pdf-parse": "^2.4.5"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^24.3.0",
    "@types/papaparse": "^5.5.2",
    "electron": "^37.0.0",
    "electron-builder": "^26.0.12",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "wait-on": "^8.0.5"
  }
}
